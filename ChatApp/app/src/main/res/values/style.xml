<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Btn.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Btn.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Btn.Img" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Text.Base" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
